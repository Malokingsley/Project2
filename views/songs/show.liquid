{% layout 'layout.liquid' %}
{% block content %}
  <div class="container-md">
    <article>
      <h2>
        {{ song.title }}
      </h2>
      <h3>
        Artist: {{ song.artist }}</h3>
      <h4 class>
        <div>
          Title: {{ song.title }}
        </div>
        <div>
          Album Name: {{ song.albumName }}
        </div>
        <div>
        Release Date: {{ song.releaseDate }}
        </div>
      </h4>
      
      {% if song.owner == userId %}
        <div class="btn-group">

          <a href="/songs/{{ song.id }}/edit" class="btn btn-primary">Edit</a>
          <form action="/songs/{{ song.id }}?_method=DELETE" method="POST">
            <input
              type="submit"
              value="Delete"
              class="btn btn-danger">
          </form>
        </div>
      {% endif %}
    </article>
  </div>
{% endblock %}