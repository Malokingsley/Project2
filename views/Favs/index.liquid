{% layout 'layout.liquid' %}
{% block content %}
  <div>
    <h2 class="display-6">Favorite Songs</h2>
    <div class="row">
      {%if faves.length <= 0%}
      <h3>you have no favorites</h3>
      {%else%}
      {% for fave in faves %}
        
        <div class="card" style="width: 18rem;">
          <h5 class="card-header">{{ fave.song.title }}</h5>
          <div class="card-body">
            <h5 class="card-title">
              Title: {{ fave.song.title }}
            </h5>
            <p class="card-text">
              Artist: {{ fave.song.artist }}
            </p>
            <p class="card-text">
              Album: {{ fave.song.albumName }}
            </p>
            <a href="/songs/{{ fave.song.id }}" class="btn btn-info">
              View Song info
              </a>
              <form action="/faves/{{ fave.id }}?_method=DELETE" method="POST">
          
              <input
                type="submit"
                class="btn btn-danger"
                value="DELETE {{ fave.song.name}}">
            </form>
              


          </div>
        </div>
      {% endfor %}
      {%endif%}
    </div>
  </div>
{% endblock %}